{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2017",
      "esnext"
    ],
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
